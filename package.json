{
  "name": "sprt.dev",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "start": "node ./dist/server/bin/www",
    "dev": "npm-run-all copy-files start-dev",
    "start-dev": "ts-node-dev ./server/bin/www.ts --respawn --transpileOnly",
    "build": "npm-run-all clean ts-build copy-files",
    "ts-build": "tsc",
    "clean": "rimraf dist",
    "copy-files": "cp -r ./server/views/ ./dist/server && cp -r ./public dist",
    "pretty": "prettier --write {server,public}/**/**.ts",
    "lint": "eslint '{public,server}/**/*.ts'"
  },
  "dependencies": {
    "@babel/core": "^7.24.4",
    "@babel/plugin-transform-runtime": "^7.24.3",
    "@babel/preset-env": "^7.24.4",
    "axios": "^1.6.8",
    "cookie-parser": "^1.4.6",
    "debug": "^4.3.4",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jade": "^1.11.0",
    "morgan": "^1.10.0",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "table": "^6.8.2"
  },
  "devDependencies": {
    "@tylerjlawson/prettier": "^1.0.12",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.12.7",
    "@types/rimraf": "^4.0.5",
    "@types/table": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-inline-json-import": "^0.3.2",
    "eslint": "^9.1.0",
    "eslint-plugin-jest": "^28.2.0",
    "husky": "9",
    "jest": "^29.7.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.2.5",
    "pretty-quick": "^4.0.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime",
      "inline-json-import"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "bun lint && pretty-quick --staged"
    }
  },
  "prettier": "@tylerjlawson/prettier"
}
