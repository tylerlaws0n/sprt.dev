{
  "name": "sprt.dev",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "start": "node ./dist/server/bin/www",
    "dev": "npm-run-all copy-files start-dev",
    "start-dev": "ts-node-dev ./server/bin/www.ts --respawn --transpileOnly",
    "build": "npm-run-all clean ts-build copy-files",
    "ts-build": "tsc",
    "clean": "rimraf dist",
    "copy-files": "cp -r ./server/views/ ./dist/server && cp -r ./public dist",
    "pretty": "prettier --write {server,public}/**/**.ts",
    "lint": "eslint '{public,server}/**/*.ts'"
  },
  "dependencies": {
    "@babel/core": "^7.13.8",
    "@babel/plugin-transform-runtime": "^7.13.8",
    "@babel/preset-env": "^7.13.8",
    "axios": "^0.21.1",
    "cookie-parser": "^1.4.5",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jade": "^1.11.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "table": "^6.0.7"
  },
  "devDependencies": {
    "@tylerjlawson/prettier": "^1.0.12",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.11",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.37",
    "@types/table": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-inline-json-import": "^0.3.2",
    "eslint": "^7.20.0",
    "eslint-plugin-jest": "^24.1.5",
    "husky": "4",
    "jest": "^26.6.3",
    "jsdom": "^16.5.3",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.3"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime",
      "inline-json-import"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "bun lint && pretty-quick --staged"
    }
  },
  "prettier": "@tylerjlawson/prettier"
}
